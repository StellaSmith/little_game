{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "vertices",
        "faces",
        "license",
        "author"
    ],
    "additionalProperties": false,
    "properties": {
        "author": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "contact": {
                    "union": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "minItems": 2,
                            "items": {
                                "type": "string"
                            }
                        }
                    ]
                },
                "url": {
                    "union": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "minItems": 2,
                            "items": {
                                "type": "string"
                            }
                        }
                    ]
                }
            }
        },
        "license": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "comment": {
            "union": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "vertices": {
            "type": "array",
            "minItems": 3,
            "items": {
                "type": "object",
                "required": [
                    "position",
                    "uv"
                ],
                "additionalProperties": false,
                "properties": {
                    "position": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "minItems": 2,
                        "maxItems": 3
                    },
                    "uv": {
                        "type": "array",
                        "items": {
                            "type": "number",
                            "minItems": 2,
                            "maxItems": 2
                        }
                    }
                }
            }
        },
        "faces": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "indices",
                    "sides",
                    "texture"
                ],
                "additionalProperties": false,
                "properties": {
                    "indices": {
                        "type": "array",
                        "minItems": 3,
                        "items": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 4294967295
                        }
                    },
                    "sides": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string",
                            "enum": [
                                "top",
                                "north",
                                "west",
                                "east",
                                "south",
                                "bottom"
                            ]
                        }
                    },
                    "texture": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 4294967295
                    },
                    "solid": {
                        "type": "boolean",
                        "default": true
                    }
                }
            }
        }
    }
}